<?xml version="1.0"?> <project name="homework7" default="war" basedir=".">     <property name="warfile"        value="session7.war"/>    <property name="conf"           value="conf"/>     <property name="html"           value="html"/>     <property name="lib"            value="lib"/>     <property name="properties"     value="properties"/>     <property name="target"         value="c:\tomcat5\webapps\session7"/>    <property name="WEB-INF"        value="WEB-INF"/>     <property name="bean"           value="bean"/>     <property name="classes"        value="classes"/>    <property name="src"            value="src"/>     <target name="clean">          <delete dir="${classes}"/>    </target>    <target name="init">          <mkdir dir="${classes}"/>        <mkdir dir="${classes}\${bean}"/>        <mkdir dir="${target}"/>        <mkdir dir="${target}\${WEB-INF}"/>        <mkdir dir="${target}\${WEB-INF}\${classes}\${bean}"/>        <mkdir dir="${target}\${WEB-INF}\${lib}"/>        <mkdir dir="${target}\${WEB-INF}\${src}"/>        <mkdir dir="${target}\${WEB-INF}\${src}\${bean}"/>    </target>    <target name="compile" depends="init">         <javac  srcdir="${src}"                destdir="${classes}"                debug="on"        />    </target>    <target name="copy" depends="compile">         <copy todir="${target}\${WEB-INF}\${classes}">            <fileset dir="${classes}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}\${src}">            <fileset dir="${src}">            </fileset>        </copy>        <copy todir="${target}">            <fileset dir="${html}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}\${lib}">            <fileset dir="${lib}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}\${classes}">            <fileset dir="${properties}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}">            <fileset dir="${WEB-INF}">            </fileset>        </copy>    </target>    <target name="war" depends="copy">        <delete file="${warfile}"/>        <property name="version.num" value="1.00"/>        <buildnumber file="build.num"/>        <tstamp>            <format property="TODAY" pattern="yyyy-MM-dd hh:mm:ss" />        </tstamp>        <manifest file="MANIFEST.MF">            <attribute name="Built-By" value="${user.name}"/>            <attribute name="Main-Class" value="ManyServlets"/>            <attribute name="Implementation-Version" value="${version.num}-b${build.number}"/>               <attribute name="Built-Date" value="${TODAY}"/>                         </manifest>        <jar destfile="${warfile}"            basedir="${target}"            includes="**/*"            manifest="MANIFEST.MF"         />        <copy file="${warfile}" todir="${target}\.."/>        </target></project>