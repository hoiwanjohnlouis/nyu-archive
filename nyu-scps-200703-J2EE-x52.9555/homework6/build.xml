<?xml version="1.0"?> <project name="homework6" default="war" basedir=".">     <property name="project"        value="session6"/>    <property name="warfile"        value="${project}.war"/>    <property name="xmlfile"        value="${project}.xml"/>    <property name="classes"        value="classes"/>    <property name="conf"           value="conf"/>     <property name="etc"            value="etc"/>     <property name="html"           value="html"/>     <property name="lib"            value="lib"/>     <property name="properties"     value="properties"/>     <property name="src"            value="src"/>     <property name="tomcat"         value="C:\Tomcat5"/>     <property name="target"         value="${tomcat}\webapps\${project}"/>    <property name="WEB-INF"        value="WEB-INF"/>     <target name="clean">          <delete dir="${classes}"/>    </target>    <target name="init">          <mkdir dir="${classes}"/>    </target>    <target name="compile" depends="init">         <javac  srcdir="${src}"                destdir="${classes}"                debug="on"        />    </target>    <target name="copy" depends="compile">         <copy todir="${target}\${WEB-INF}\${classes}">            <fileset dir="${classes}">            </fileset>        </copy>        <copy todir="${target}">            <fileset dir="${html}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}\${lib}">            <fileset dir="${lib}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}\${classes}">            <fileset dir="${properties}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}\${src}">            <fileset dir="${src}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}">            <fileset dir="${WEB-INF}">            </fileset>        </copy>        <copy todir="${target}\${WEB-INF}">            <fileset dir="${etc}">            </fileset>        </copy>        <copy file="${etc}\${xmlfile}"              tofile="${tomcat}\conf\Catalina\localhost\${xmlfile}"        />    </target>    <target name="war" depends="copy">        <delete file="${warfile}"/>        <property name="version.num" value="1.00"/>        <buildnumber file="build.num"/>        <tstamp>            <format property="TODAY" pattern="yyyy-MM-dd hh:mm:ss" />        </tstamp>        <manifest file="MANIFEST.MF">            <attribute name="Built-By" value="${user.name}"/>            <attribute name="Main-Class" value="ManyServlets"/>            <attribute name="Implementation-Version" value="${version.num}-b${build.number}"/>               <attribute name="Built-Date" value="${TODAY}"/>                         </manifest>        <jar destfile="${warfile}"            basedir="${target}"            includes="**/*"        />            <!--            manifest="MANIFEST.MF"             -->        <copy file="${warfile}" todir="${target}\.."/>        </target></project>